<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutTutorSlots"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_light"
    tools:context=".Views.student.TutorTimeSlotsActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Available Time Slots"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView to display available slots -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerSlots"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="80dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_slot" />

    <!-- ProgressBar for loading -->
    <ProgressBar
        android:id="@+id/progressBarSlots"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Empty-state message -->
    <TextView
        android:id="@+id/txtEmptySlots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No available slots at the moment."
        android:textSize="16sp"
        android:textColor="@color/dark_gray"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:padding="12dp" />

    <!-- Floating refresh button (optional manual refresh) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRefreshSlots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Refresh slots"
        android:src="@drawable/ic_refresh"
        android:tint="@color/white"
        android:visibility="visible"
        app:backgroundTint="@color/primary"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
