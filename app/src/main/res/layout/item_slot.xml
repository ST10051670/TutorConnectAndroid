<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSlotItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Day and Time -->
        <TextView
            android:id="@+id/txtDayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday â€¢ 10:00 - 11:00"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Session Type -->
        <TextView
            android:id="@+id/txtSessionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session Type: One-on-One"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:layout_marginTop="4dp" />

        <!-- Availability Info -->
        <TextView
            android:id="@+id/txtAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available"
            android:textColor="@color/green_success"
            android:textSize="13sp"
            android:layout_marginTop="6dp" />

        <!-- Book Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBookSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Book This Slot"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:paddingVertical="10dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/ic_book"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:backgroundTint="@color/primary"
            android:textColor="@color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
