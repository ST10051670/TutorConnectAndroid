<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="72dp">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/imgChatProfile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_person"
        android:background="@drawable/profile_placeholder_background"
        android:clipToOutline="true"
        android:layout_marginEnd="12dp" />

    <!-- Chat Info -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtChatName"
            android:text="Tutor Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtLastMessage"
            android:text="Last message preview"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Unread Indicator -->
    <View
        android:id="@+id/txtUnreadIndicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:backgroundTint="#FF5722"
        android:background="@drawable/unread_dot"
        android:layout_marginStart="8dp"
        android:visibility="gone" />
</LinearLayout>
