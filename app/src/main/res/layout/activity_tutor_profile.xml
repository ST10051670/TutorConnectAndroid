<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <!-- Floating Circular Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_arrow_back"
        android:elevation="6dp"
        android:layout_gravity="start|top"
        app:tint="@color/black" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Shimmer Placeholder -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="100dp">

                <View
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:background="@drawable/shimmer_placeholder_rounded"
                    android:layout_marginBottom="24dp" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="24dp"
                    android:background="@drawable/shimmer_placeholder_rect"
                    android:layout_marginBottom="8dp" />

                <View
                    android:layout_width="240dp"
                    android:layout_height="16dp"
                    android:background="@drawable/shimmer_placeholder_rect" />
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Actual Tutor Profile Content -->
        <ScrollView
            android:id="@+id/profileScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingBottom="24dp">

                <!-- Tutor Profile Image -->
                <ImageView
                    android:id="@+id/imgTutorProfile"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/profile_placeholder_background"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"
                    android:src="@drawable/ic_person"
                    android:contentDescription="@string/tutor_image" />

                <!-- Tutor Basic Info -->
                <TextView
                    android:id="@+id/txtTutorName"
                    android:text="Tutor Name"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtTutorEmail"
                    android:text="Email: tutor@email.com"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtTutorPhone"
                    android:text="Phone: +27 000 000 0000"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtTutorExpertise"
                    android:text="Expertise: Mathematics"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtTutorQualifications"
                    android:text="Qualifications: BSc Computer Science"
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtTutorDescription"
                    android:text="Loading tutor details..."
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <!-- Rating Summary -->
                <TextView
                    android:id="@+id/txtTutorRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⭐ 0.0 (0 reviews)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp" />

                <!-- Recent Reviews Section -->
                <LinearLayout
                    android:id="@+id/reviewsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@drawable/item_background"
                    android:divider="@android:color/darker_gray"
                    android:showDividers="middle" />

                <!-- Book Now -->
                <Button
                    android:id="@+id/btnBookNow"
                    android:text="Book Now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="#FFFFFF" />

                <!-- Chat With Me -->
                <Button
                    android:id="@+id/btnChatWithMe"
                    android:text="Chat With Me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</FrameLayout>
